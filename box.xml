<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/2019/box.xsd">
    <import>
        <box identifier="com.uz.show.Categories">
            <name language="de">Kategorien (Schaufenster)</name>
            <name language="en">Categories (Display Window)</name>
            <boxType>system</boxType>
            <objectType>com.uz.show.categories</objectType>
            <position>sidebarRight</position>
            <showHeader>1</showHeader>
            <visibleEverywhere>0</visibleEverywhere>
            <visibilityExceptions>
                <page>com.uz.show.EntryList</page>
                <page>com.uz.show.CategoryEntryList</page>
            </visibilityExceptions>

            <content language="de">
                <title>Kategorien</title>
            </content>
            <content language="en">
                <title>Categories</title>
            </content>
        </box>

        <box identifier="com.uz.show.LatestComments">
