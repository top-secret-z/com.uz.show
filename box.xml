            <name language="en">Latest Comments (Display Window)</name>
            <boxType>system</boxType>
            <objectType>com.uz.show.commentList</objectType>
            <position>sidebarRight</position>
            <showHeader>1</showHeader>
            <visibleEverywhere>0</visibleEverywhere>
            <visibilityExceptions>
                <page>com.uz.show.EntryList</page>
                <page>com.uz.show.CategoryEntryList</page>
            </visibilityExceptions>
            <sortField>time</sortField>
            <sortOrder>DESC</sortOrder>
            <limit>5</limit>

            <content language="de">
                <title>Letzte Kommentare</title>
            </content>
            <content language="en">
                <title>Latest Comments</title>
            </content>
        </box>

